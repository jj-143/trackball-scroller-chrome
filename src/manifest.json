{
  "name": "Trackball Scroller",
  "version": "1.0.0.99",
  "description": "Scroll with your trackball.",
  "permissions": ["storage"],
  "background": {
    "scripts": ["./background/index.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/icon-c1-128.png"
    }
  },
  "icons": {
    "128": "images/icon-c1-128.png"
  },
  "options_page": "options/options.html",
  "manifest_version": 2
}
