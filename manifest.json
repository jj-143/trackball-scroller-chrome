{
  "name": "Trackball Scroller",
  "version": "0.0.1",
  "description": "Adds scroll mode to browse the web easily.",
  "permissions": ["*://*/*", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/icon-c1-128.png"
    }
  },
  "icons": {
    "128": "images/icon-c1-128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
